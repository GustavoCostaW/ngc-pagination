{
  "compilerOptions": {
    "baseUrl": ".",
    "declaration": true,
    "stripInternal": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "strictNullChecks": true,
    "noImplicitAny": false,
    "module": "es2015",
    "moduleResolution": "node",
    "rootDir": ".",
    "outDir": "dist",
    "sourceMap": true,
    "inlineSources": true,
    "target": "es5",
    "skipLibCheck": true,
    "lib": [
      "es2015", "dom"
    ],
    "suppressImplicitAnyIndexErrors": true
  },
  "files": [
    "./module/ngc-pagination.module.ts"
  ],
  "exclude": [
    "app",
    "compiled",
    "dist",
    "node_modules"
  ]
}
